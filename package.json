{
  "name": "drupal-accessibility-probe",
  "version": "0.1.0",
  "description": "Mini probe: Playwright + axe-core accessibility scans, Python analysis, SQLite persistence.",
  "scripts": {
  "scan": "ts-node src/scan.ts",
  "validate": "ts-node src/validate.ts",
  "test:jest": "jest --runInBand",
  "test:pw": "playwright test",
  "test": "npm run test:jest && npm run test:pw"
},
  "dependencies": {
    "axe-core": "^4.6.3",
    "playwright": "^1.37.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/scan.spec.ts"
    ]
  }
}
